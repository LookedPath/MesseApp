<TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:shrinkColumns="*"
        android:stretchColumns="*"
        android:weightSum="190"
        android:background="@drawable/sfondomesseapp"
        android:id="@+id/activity_main">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="67"
            android:paddingTop="20dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView1"
                android:src="@drawable/social"
                android:scaleType="centerInside"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:onClick="social"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView2"
                android:src="@drawable/orario"
                android:scaleType="centerInside"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:onClick="orario"/>

        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:layout_weight="1"
            android:id="@+id/tableRow2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:text="Social"
                android:id="@+id/textView1"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:text="@string/orario"
                android:id="@+id/textView2"
                android:textColor="@android:color/black" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:layout_weight="67"
            android:id="@+id/tableRow3"
            android:weightSum="10"
            android:paddingTop="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView3"
                android:src="@drawable/notizie"
                android:scaleType="centerInside"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:onClick="news"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView4"
                android:src="@drawable/calendario"
                android:scaleType="centerInside"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:onClick="calendar"/>
        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:baselineAligned="false"
            android:layout_weight="1"
            android:id="@+id/tableRow4"
            android:weightSum="10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:text="@string/notizie"
                android:id="@+id/textView3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:text="@string/eventi"
                android:id="@+id/textView4"
                android:textColor="@android:color/black" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:baselineAligned="false"
            android:layout_weight="67"
            android:id="@+id/tableRow5"
            android:paddingTop="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView5"
                android:src="@drawable/voti"
                android:scaleType="centerInside"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:onClick="voti"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView6"
                android:src="@drawable/circolari"
                android:scaleType="centerInside"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:onClick="notavailable"/>
        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:id="@+id/tableRow6">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:text="@string/registro"
                android:id="@+id/textView5"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:text="@string/circolari"
                android:id="@+id/textView6"
                android:textColor="@android:color/black" />
        </TableRow>
