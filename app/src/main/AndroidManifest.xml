<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.messedagliavr.messeapp"
    android:installLocation="auto">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.messedagliavr.messeapp.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ContactsActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.messedagliavr.messeapp.MainActivity" />
        </activity>
        <activity
            android:name=".ListItemSelectedNewsActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".ListItemSelectedCalendarActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity android:name=".TimetableActivity">
            <meta-data
             android:name="android.support.PARENT_ACTIVITY"
             android:value="com.messedagliavr.messeapp.MainActivity" />
        </activity>
        <activity
            android:name="com.messedagliavr.messeapp.NewsActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.messedagliavr.messeapp.MainActivity" />
        </activity>
        <activity
            android:name="com.messedagliavr.messeapp.CalendarActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.messedagliavr.messeapp.MainActivity" />
        </activity>
        <activity
            android:name="com.messedagliavr.messeapp.SettingsActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.messedagliavr.messeapp.MainActivity" />
        </activity>
        <activity
            android:name="com.messedagliavr.messeapp.SocialActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.messedagliavr.messeapp.MainActivity" />
        </activity>
    </application>

</manifest>
