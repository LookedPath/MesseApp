        android:name=".Acra">
        <activity
            android:name="com.messedagliavr.messeapp.MainActivity"
            android:label="@string/main_title" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.messedagliavr.messeapp.news"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.messedagliavr.messeapp.calendar"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.messedagliavr.messeapp.ListItemSelectedNews"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.messedagliavr.messeapp.ListItemSelectedCalendar"
            android:screenOrientation="portrait" >
        </activity>
        <activity android:name="com.messedagliavr.messeapp.XmlParser" >
        </activity>
        <activity android:name="com.messedagliavr.messeapp.Database" >
        </activity>
        <activity android:name="com.messedagliavr.messeapp.timetable" >
        </activity>
    </application>
</manifest>
