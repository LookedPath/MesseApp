<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sfondomesseapp"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/TextDebla"
        android:layout_width="87dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textAmbro"
        android:layout_alignBottom="@+id/textAmbro"
        android:layout_alignParentRight="true"
        android:layout_marginRight="26dp"
        android:text="@string/debla"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/textAmbro"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextDev"
        android:layout_marginRight="17dp"
        android:layout_toLeftOf="@+id/TextBianchi"
        android:text="@string/ambro"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/TextDev"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:text="@string/dev"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/TextBenati"
        android:layout_width="87dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textAmbro"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="32dp"
        android:text="@string/benati"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/TextGraphic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textAmbro"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:text="@string/graphic"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/TextGrezz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextGraphic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:text="@string/grezzana"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/TextOtdev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextGrezz"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:text="@string/otdev"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/TextIervasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextOtdev"
        android:layout_marginTop="22dp"
        android:layout_toLeftOf="@+id/TextBianchi"
        android:text="@string/iervasi"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/TextBianchi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/TextDebla"
        android:layout_below="@+id/TextIervasi"
        android:layout_marginTop="18dp"
        android:text="@string/bianchi"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/black" />

</RelativeLayout>