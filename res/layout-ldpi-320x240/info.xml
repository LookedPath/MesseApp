<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sfondomesseapp"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/TextBenati"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextOtdev"
        android:layout_alignParentBottom="true"
        android:text="@string/benati"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/TextDev"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/dev"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/textAmbro"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextOtdev"
        android:layout_below="@+id/TextDev"
        android:layout_marginTop="20dp"
        android:text="@string/ambro"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/TextGraphic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textAmbro"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="@string/graphic"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/TextGrezz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextDev"
        android:layout_centerVertical="true"
        android:text="@string/grezzana"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/TextOtdev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextGrezz"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/otdev"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/TextDebla"
        android:layout_width="87dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/TextGraphic"
        android:layout_toRightOf="@+id/TextBenati"
        android:text="@string/debla"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/TextBianchi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/TextBenati"
        android:layout_toRightOf="@+id/TextIervasi"
        android:layout_marginBottom="20dp"
        android:text="@string/bianchi"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/TextIervasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextOtdev"
        android:layout_below="@+id/TextOtdev"
        android:layout_marginTop="20dp"
        android:text="@string/iervasi"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/black" />

</RelativeLayout>